<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape >
            <solid android:color="@color/btn_danger_pressed"/>
            <stroke android:width="1dp"
                android:color="@color/btn_danger_edge"/>
            <corners android:radius="@dimen/btn_rounded_cornor_radius"/>
        </shape>
    </item>
    
    <item android:state_enabled="false">
        <shape >
            <solid android:color="@color/btn_danger_disabled"/>
            <stroke android:width="1dp"
                android:color="@color/btn_danger_disabled_edge"/>
            <corners android:radius="@dimen/btn_rounded_cornor_radius"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape >
            <solid android:color="@color/btn_danger"/>
            <stroke android:width="1dp"
                android:color="@color/btn_danger_edge"/>
            <corners android:radius="@dimen/btn_rounded_cornor_radius"/>
        </shape>
    </item>
    
</selector>
